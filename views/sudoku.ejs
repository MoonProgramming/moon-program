<% layout('layout') -%>

    <!-- Modal -->
    <div class="modal fade" id="sudokuCompleteModal" tabindex="-1" role="dialog"
        aria-labelledby="sudokuCompleteModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="sudokuCompleteModalTitle">...</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="sudokuCompleteModalBody">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveResultButton">Save Record</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="pb-2 mt-4 mb-4 border-bottom">
            <h3>Sudoku</h3>
            <div class="small">Select empty box, key-in/click/drag your numbers.</div>
        </div>

        <% include templates/alert.ejs %>

        <div class="btn-group dropright">
            <button type="button" class="btn btn-sm btn-secondary dropdown-toggle" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                Action
            </button>
            <div class="dropdown-menu">
                <button class="dropdown-item" type="button" onclick="genNewQuestion()">New Game</button>
                <div class="dropdown-divider"></div>
                <button class="dropdown-item" type="button" onclick="resetQuestion()">Reset</button>
                <button class="dropdown-item" type="button" onclick="showAnswer()">Show Answer</button>
                <button class="dropdown-item" type="button" onclick="hintNextStep()">Hint Next Step</button>
            </div>
        </div>
        <div class="sketch-container mt-2">
            <div id="sketch-holder"></div>
        </div>
    </div>
    <script src="/lib/sudokuGenerator.js"></script>